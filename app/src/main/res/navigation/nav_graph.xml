<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/categoriesFragment">

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.andrejskijonoks.job_interview_template.fragments.CategoriesFragment"
        android:label="CategoriesFragment">
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.andrejskijonoks.job_interview_template.fragments.CategoryFragment"
        android:label="CategoryFragment">
        <argument
            android:name="category"
            app:argType="com.andrejskijonoks.job_interview_template.models.Category" />
        <action
            android:id="@+id/action_detailsFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>

    <fragment
        android:id="@+id/productFragment"
        android:name="com.andrejskijonoks.job_interview_template.fragments.ProductFragment"
        android:label="ProductFragment">
        <argument
            android:name="product"
            app:argType="com.andrejskijonoks.job_interview_template.models.Product" />
    </fragment>

</navigation>